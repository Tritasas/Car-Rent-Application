<script>

    function generate_ticket( ticket_doc_sub_id ){
        Swal.fire({
            icon : "question",
            title: "ยืนยันการให้ตั๋ว",
            html: "ยืนยันการให้ตั๋วกับเอกสารการขอรายการนี้หรือไม่ ? <br><br> <span class='red'> * หมายเหตุ : ให้แล้วไม่สามารถเอาคืนได้ โปรดตรวจสอบให้แน่ใจก่อน</span>",
            showCancelButton: true,
            confirmButtonColor: "#027E6F",
            cancelButtonColor: "#00000040",
            confirmButtonText: "ยืนยัน, ให้ตั๋ว" ,
            cancelButtonText: "ปิด"
        }).then((result) => {
            if (result.isConfirmed) {

                let data = {
                    ticket_doc_sub_id : ticket_doc_sub_id
                }
        
                $.ajax({
                    type: 'POST',
                    url: '/generate_ticket',
                    data: data,
                    success: function (call_back_data) {
                        // window.location.reload();

                        console.log("call_back_data")
                        console.log(call_back_data)

                        if( call_back_data == "success" ){
                            Swal.fire({
                                icon: "success",
                                title: "การให้ตั๋ว สำเร็จ",
                                text: "",
                            });
                            
                            setTimeout( function(){window.location.reload()} , 1000 );
                        }else if( call_back_data == "error 002" ){
                            Swal.fire({
                                icon: "warning",
                                title: "การให้ตั๋ว ไม่สำเร็จ",
                                text: "ไม่สำเร็จ : ไม่มีตั๋วที่พร้อมใช้งาน",
                            });
                        }else if( call_back_data == "error 001" ){
                            Swal.fire({
                                icon: "warning",
                                title: "การให้ตั๋ว ไม่สำเร็จ",
                                text: "ไม่สำเร็จ : ระบบทำงานผิดปกติ",
                            });
                        }else{
